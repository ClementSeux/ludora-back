# Environment variables for production deployment
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
# Replace with your actual database credentials
DATABASE_URL="postgresql://ludora_user:your_secure_password@localhost:5432/ludora_db"

# JWT Configuration
# Generate a secure secret (at least 32 characters)
JWT_SECRET="your_very_secure_jwt_secret_here_minimum_32_characters_long_for_production"
JWT_EXPIRES_IN="7d"

# Optional: Logging Level
LOG_LEVEL=info

# Optional: CORS Origins (comma-separated)
# CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Optional: Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
